# ============================================
# AegisQA Environment Configuration
# ============================================
# Copy this file to .env and update values

# Application
NODE_ENV=development

# ParaBank Demo Application
PARABANK_URL=http://localhost:8080/parabank
PARABANK_API_URL=http://localhost:8080/parabank/services

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aegisqa_test
DB_USER=aegisqa
DB_PASSWORD=aegisqa_pass

# AI Provider (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Allure Reporting
ALLURE_RESULTS_DIR=./reports/allure-results
ALLURE_SERVER_URL=http://localhost:5050

# Test Configuration
TEST_TIMEOUT=30000
HEADLESS=true
SLOW_MO=0
